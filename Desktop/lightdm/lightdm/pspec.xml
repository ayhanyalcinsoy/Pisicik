        </Files>
        <AdditionalFiles>
            <AdditionalFile permission="0644" target="/usr/lib/systemd/system/lightdm.service">lightdm.service</AdditionalFile>
            <AdditionalFile permission="0644" target="/usr/lib/tmpfiles.d/lightdm.conf">lightdm.tmpfiles</AdditionalFile>
            <AdditionalFile permission="0755" target="/etc/lightdm/Xsession">Xsession</AdditionalFile>
	    <AdditionalFile permission="0755" target="/usr/share/polkit-1/rules.d/lightdm.rules">lightdm.rules</AdditionalFile>
	    <AdditionalFile permission="0755" target="/etc/pam.d/lightdm-autologin">lightdm-autologin.pam</AdditionalFile>
