        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/env.d/20ant">20ant</AdditionalFile>
            <AdditionalFile target="/etc/ant.conf" permission="0644" owner="root">ant.conf</AdditionalFile>
        </AdditionalFiles>
    </Package>

